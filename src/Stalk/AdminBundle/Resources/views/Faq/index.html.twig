{% extends 'StalkAdminBundle::layout.html.twig' %}

{% block body -%}

    {% for flashMessage in app.session.flashbag.get('notice-successfully') %}

        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{ flashMessage|raw }}
        </div>

    {% endfor %}

    <h2 class="text-info">FAQ</h2>

    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-md-1">#</th>
                <th class="col-md-1">Опубликовано</th>
                <th>Вопрос</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td align="center">
                    {% if entity.enabled %}
                        <span class="glyphicon glyphicon-ok-circle"></span>
                    {% endif %}                
                </td>
                <td><a href="{{ path('faq_edit', { 'id': entity.id }) }}">{{ entity.question }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a href="{{ path('faq_new') }}"
       class="btn btn-primary" title="Добавить вопрос">
        <span class="glyphicon glyphicon-plus"></span> Добавить вопрос
    </a><br/><br/>

{% endblock %}
