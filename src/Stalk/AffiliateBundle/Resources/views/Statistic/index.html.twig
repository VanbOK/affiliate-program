{% extends 'StalkAffiliateBundle::layout.html.twig' %}

{% block javascripts %}

    {{ parent() }}

    {% javascripts
        '@StalkAffiliateBundle/Resources/public/js/amcharts/amcharts.js'
        '@StalkAffiliateBundle/Resources/public/js/amcharts/serial.js'
        '@StalkAffiliateBundle/Resources/public/js/bootstrap-datepicker.js'
        '@StalkAffiliateBundle/Resources/public/js/locales/bootstrap-datepicker.ru.js'
        '@StalkAffiliateBundle/Resources/public/js/statistic.js'
        filter='yui_js'             
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}
        
{% block stylesheets %}

    {{ parent() }}
        
    {% stylesheets
        'bundles/stalkaffiliate/css/datepicker.css'
        filter='cssrewrite, yui_css' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

{% endblock %}
        

{% block content %}
    
    <h4 class="text-info">Статистика:</h4><br/>
    
    <form action="#" method="post">
        
        <div class="col-md-4">

            <div class="input-daterange input-group" id="datepicker">
                <input type="text" class="form-control input-sm" name="dateFrom" placeholder="от" value="{{ app.request.request.get('dateFrom') }}"/>
                <span class="input-group-addon" title="Фильтр по дате">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
                <input type="text" class="form-control input-sm" name="dateTo" placeholder="до" value="{{ app.request.request.get('dateTo') }}"/>
            </div>

        </div>
        
        <div class="col-md-4">

            <button class="btn btn-default btn-sm" title="фильтровать">
                показать
            </button>
            
            <a href="#" class="btn btn-default btn-sm clearForm">очистить</a>

        </div>
        
    </form>
    
    <div class="clear"></div>
    
    <div id="chartdiv" style="width: 100%; height: 250px; margin-top: 30px;"></div>
    
{% endblock %}